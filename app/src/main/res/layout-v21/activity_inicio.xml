<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.onlinesellers.developermotoappbeta13.InicioActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/crear_recorridos"
        android:id="@+id/newRoute"
        android:background="#ff99cc00"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="newRoute" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/ver_recorridos"
        android:id="@+id/viewRoute"
        android:backgroundTintMode="multiply"
        android:background="#ff33b5e5"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/newRoute"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="viewRoute" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motoapp_beta_1_3_2016_online_sellers"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/crash_y_comentarios"
        android:id="@+id/newCrash"
        android:layout_below="@+id/viewRoute"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="#bababa" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/reportar_accidente"
        android:id="@+id/newReporte"
        android:textColor="#222222"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffbb33" />

</RelativeLayout>
